{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native", // or "react" for non-React Native projects
    "allowSyntheticDefaultImports": true, // useful for importing modules
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
